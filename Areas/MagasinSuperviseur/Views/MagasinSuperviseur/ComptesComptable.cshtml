@using DevKbfSteel.Models
@using DevExpress.XtraReports.UI;
@using DevKbfSteel.Controllers
@using DevExpress.XtraReports.Parameters;
@using DevKbfSteel.Reports
@using DevExpress.AspNetCore
@using DevExtreme.AspNet.Mvc
@using DevKbfSteel.Helpers;
@using DevKbfSteel.Areas.MagasinManager.Models;

@{
    ViewData["Title"] = "Magasin-Comptes Comptable";
    Layout = "~/Views/Shared/_LayoutMagasinSuperviseur.cshtml";
}
@(Html.DevExtreme().Toolbar()
    .Items(items =>
    {
        items.Add()
           .Widget(w => w
           .Button()
           .Icon("print")
           .Hint("Suivi des comptes")
           .OnClick("imprimerSuivi")
       )
       .LocateInMenu(ToolbarItemLocateInMenuMode.Auto)
       .Location(ToolbarItemLocation.Before);
    }
    )
)
@(Html.DevExtreme().DataGrid<DevKbfSteel.Entities.ComptComptesComptable>()
    .ID("Decharges")
    .DataSource(ds => ds.Mvc()
    .Controller("ComptesComptable")
    .LoadAction("Get")
    .Key("NumCompte")
    )
    .RemoteOperations(true)
    .NoDataText("Aucune donnée à afficher")
    .CacheEnabled(true)
    .SearchPanel(sp => sp.Placeholder("Rechercher").Visible(true))
    .Columns(columns => {
        columns.AddFor(m => m.NumCompte);
        columns.AddFor(m => m.DesignationCompte);
        columns.Add()
        .Type(GridCommandColumnType.Buttons)
        .Width(110)
        .Buttons(b =>
        {
        b.Add()
            .Hint("Imprimer")
            .OnClick(@<text>imprimerEtat</text>)
                .Icon("print");
            });
        })
.ColumnChooser(cc => cc
.Enabled(true)
.AllowSearch(true))
.Height("95%")
.Export(e => e.Enabled(true).AllowExportSelectedData(true))
.FilterRow(f => f.Visible(true))
.HeaderFilter(headerfilter => headerfilter.Visible(true))
.GroupPanel(p => p.Visible(true))
.MasterDetail(md => md
.Enabled(true)
.Template(new TemplateName("ComptesComptableDetails")))
.AllowColumnReordering(true)
.AllowColumnResizing(true)
.OnCellPrepared("receptionCell_prepared")
.Selection(s => s.Mode(SelectionMode.Multiple))
.Editing(editing =>
{
    editing.AllowUpdating(false);
    editing.AllowDeleting(false);
    editing.AllowAdding(false);
    editing.Mode(GridEditMode.Form);
})
)
@using (Html.DevExtreme().NamedTemplate("ComptesComptableDetails"))
{
    @(Html.DevExtreme().TabPanel()
        .Items(items =>
        {
            items.Add()
                .Title("Suivi Entrees")
                .Template(new TemplateName("EntreeGrid"))
                .Option("EntreeGrid", new { id = new JS("data.NumCompte") });
            items.Add()
                .Title("Suivi Sorties")
                .Template(new TemplateName("SortiesGrid"))
                .Option("SortiesGrid", new { id = new JS("data.NumCompte") });
        })
        )
}
@using (Html.DevExtreme().NamedTemplate("EntreeGrid"))
{
    @(Html.DevExtreme().DataGrid<DevKbfSteel.Areas.MagasinSuperviseur.Models.SuiviCCEntreesModel>()
            .DataSource(ds => ds.Mvc()
            .Controller("ComptesComptable")
            .LoadAction("GetEntrees")
            .Key("DateEntree")
            .LoadParams(new
            {
                id = new JS("EntreeGrid.id")
            }
            )
            )
    .Scrolling(scrolling => scrolling
